{
	"root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021
    },
	"env": {
		"browser": true,
		"amd": true,
		"node": true
	},
    "extends": [
		"eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
	"rules": {
        "linebreak-style": ["error", "unix"],
        "quotes": [2, "single", "avoid-escape"],
        "semi": ["error", "always"],
		"arrow-parens": ["error", "always"]
    }
}